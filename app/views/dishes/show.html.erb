<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "ustenciles.jpg" %>');">
  <div class="banner-content">

    <h1><%= @dish.name %></h1>

    <p><%= @dish.speciality %>
      <span class="label label-default">
        <%= @dish.kind_of_dish %>
      </span>
    </p>
    <p>
      <%= @dish.description %>
    </p>
    <p>Végétarien
      <span class="label label-default">
        <%= humanize_boolean(@dish.veggie) %>
      </span>
    </p>
    <p>Plat cuit
      <span class="label label-default">
        <%= humanize_boolean(@dish.cooked) %>
      </span>
    </p>
    <p>À réchauffer
      <span class="label label-default">
        <%= humanize_boolean(@dish.be_reheated) %>
      </span>
    </p>
    <p>
      <span class="label label-default">
        <%= @dish.portion_count %>
      </span>
      &nbsp
      <%= "portion".pluralize(@dish.portion_count) %> <%= "disponible".pluralize(@dish.portion_count) %>
    </p>
    <p>Taille
      &nbsp
      <span class="label label-default">
        <%= @dish.portion_size %>
      </span>
    </p>

    <p>
      <%= link_to "Retour", dishes_path, class: "btn btn-primary" %> <%= link_to "Mettre à jour", edit_dish_path(@dish), class: "btn btn-popote" %> <%= link_to "Supprimer", dish_path(@dish), method: :delete, class: "btn btn-danger" %>
    </p>

  </div>
</div>




