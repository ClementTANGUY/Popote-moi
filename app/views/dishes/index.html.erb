<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <% if @cook.user == current_user %>

        <h1 class= "text-center">Mes popotes</h1>

        <%= link_to "Nouvelle popote", new_cook_dish_path(@cook,@dish), class: "btn btn-primary" %>

        &nbsp

        <% @dishes.each do |dish| %>

          <div class="product">
            <div class='product-upvote'>
              <div class="product-arrow"></div>
              <div class='product-count'>0</div>
            </div>
            <%= image_tag "tupperwares.jpg", alt:"kudoz", class:"product-image hidden-xs" %>
            <div class='product-body'>
              <h3>
                <%= link_to dish.name, cook_dish_path(@cook,dish) %>
              </h3>
              <p>
                <%= dish.speciality %><br>
                <%= dish.kind_of_dish %>
              </p>
            </div>

            <ul class="list-inline product-controls hidden-sm hidden-xs">
              <li>
                <%= link_to edit_cook_dish_path(@cook,dish) do %>
                <i class="fa fa-pencil"></i>
                <% end %>
              </li>
              <li>
                <%= link_to cook_dish_path(@cook,dish), method: :delete do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </li>
            </ul>
          </div>

        <% end %>

      <% else %>

        <h1 class= "text-center">Les popotes de <%= @cook.first_name %></h1>

        &nbsp

        <% @dishes.each do |dish| %>

          <div class="product">
            <div class='product-upvote'>
              <div class="product-arrow"></div>
              <div class='product-count'>0</div>
            </div>
            <%= image_tag "tupperwares.jpg", alt:"kudoz", class:"product-image hidden-xs" %>
            <div class='product-body'>
              <h3>
                <%= link_to dish.name, cook_dish_path(@cook,dish) %>
              </h3>
              <p>
                <%= dish.speciality %><br>
                <%= dish.kind_of_dish %>
              </p>
            </div>
          </div>

        <% end %>

      <% end %>

    </div>
  </div>
</div>
