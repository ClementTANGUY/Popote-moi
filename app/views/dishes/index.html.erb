<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1 class= "text-center">Toutes les popotes</h1>

        <% @dishes.each do |dish| %>

          <div class="product">
            <div class='product-upvote'>
              <div class="product-arrow"></div>
              <div class='product-count'>0</div>
            </div>
            <%= image_tag "tupperwares.jpg", alt:"kudoz", class:"product-image hidden-xs" %>
            <div class='product-body'>
              <h3><%= dish.name %></h3>
              <p>
                <%= dish.speciality %><br>
                <%= dish.kind_of_dish %>
              </p>
            </div>
            <ul class="list-inline product-controls hidden-sm hidden-xs">
              <li>
                <%= link_to dish_path(dish) do %>
                <i class="fa fa-eye"></i>
                <% end %>
              </li>
              <li>
                <%= link_to edit_dish_path(dish) do %>
                <i class="fa fa-pencil"></i>
                <% end %>
              </li>
              <li>
                <%= link_to dish_path(dish), method: :delete do %>
                <i class="fa fa-trash"></i>
                <% end %>
              </li>
            </ul>
          </div>

        <% end %>

    </div>
  </div>
</div>
