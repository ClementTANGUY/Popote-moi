<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "Logo.png" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Text link -->
      <a href="" class="navbar-wagon-item navbar-wagon-link">À propos</a>

      <!-- Notification link-->

      <div class="badge-container">
        <i class="fa fa-shopping-cart"></i>
        <div class="badge badge-blue">3</div>
      </div>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <% if current_user.cook.avatar? %>
            <%= cl_image_tag current_user.cook.avatar.path, width: 60, height: 60, crop: :thumb, gravity: :face, class:"avatar dropdown-toggle", id:"navbar-wagon-menu", :"data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "chef.jpg", class:"avatar dropdown-toggle", id:"navbar-wagon-menu", :"data-toggle" => "dropdown" %>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "Mon profil", cook_path(current_user) %>
            </li>
            <li>
              <%= link_to "Mes popotes", cook_dishes_path(current_user) %>
            </li>
            <li>
              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </div>
      </div>
      <% if current_user.cook %>

      <% else %>
      <!-- Button (call-to-action) -->
      <%= link_to "Devenir Chef", new_cook_path, class:"navbar-wagon-item navbar-wagon-button btn" %>
      <% end %>

    <% else %>

      <!-- Notification link-->

      <div class="badge-container">
        <i class="fa fa-shopping-cart"></i>
        <div class="badge badge-blue">3</div>
      </div>

      <!-- Text link -->
      <a href="" class="navbar-wagon-item navbar-wagon-link">À propos</a>

      <!-- Sign in link-->
      <%= link_to "Connexion", new_user_session_path, class:"navbar-wagon-item navbar-wagon-link" %>

      <!-- Sign up link-->
      <%= link_to "Inscription", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-link" %>

      <!-- Button (call-to-action) -->
      <%= link_to "Devenir Chef", new_user_registration_path, class:"navbar-wagon-item navbar-wagon-button btn" %>

    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
