<div class=" container text-center">

  <% @order_items.each do |order_item| %>
    <%= render 'order_items', order_item: order_item, dish: order_item.dish, show_total: true %>
  <% end %>

  <div class="container text-left">
    <p>
      TOTAL <span class="label label-warning"><%= number_to_currency(@cart.subtotal, locale: :fr) %></span>
       &nbsp | &nbsp FRAIS DE SERVICE <span class="label label-warning"><%= number_to_currency(@cart.charge, locale: :fr) %></span>
       &nbsp | &nbsp MONTANT À PAYER <span class="label label-warning"><%= number_to_currency(@cart.total_amount, locale: :fr)%></span>
    </p>

    <br>

    <%= link_to "Modifier votre panier", cart_path, class: 'btn btn-popote-bis' %>
  </div>

  <hr />

  <% if current_user %>
    <p>
      <%= link_to "Je Commande", order_path, method: :post, class: "btn btn-popote btn-lg" %>
    </p>

  <% else %>

    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-2">
          <%= render 'form' %>
        </div>
        <div class="col-sm-4 col-sm-offset-2">
          <h4>Commander grâce à votre compte</h4>
          <%= link_to "Je me connecte", new_user_session_path, class:"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>

  <% end %>
</div>
