<% if !@order_item.nil? && @order_item.errors.any? %>
  <div class="alert alert-danger">
    <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% if @order_items.size == 0 %>
  <p class="text-center">
    Vous n'avez aucune popote dans votre panier. <%= link_to "Retour", :back %>
  </p>

<% else %>

  <div class="container">
  <%= link_to "Trouvez une autre popote ?", cooks_path, class: 'btn btn-popote-bis' %>
  </div>

  <% @order_items.each do |order_item| %>
    <%= render 'carts/cart_row', dish: order_item.dish, order_item: order_item, show_total: true %>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="product">
          <div class='product-body'>
            <h4>SOUS-TOTAL : <%= number_to_currency(current_order.subtotal, locale: :fr)%></h4>
            <p>FRAIS : <%= number_to_currency(current_order.charge, locale: :fr) %></p>
            <h4>MONTANT TOTAL : <%= number_to_currency(current_order.total_amount, locale: :fr)%></h4>
          </div>

          <ul class="list-inline hidden-sm hidden-xs">
            <li>
              <%= link_to "Commandez", "", class: "btn btn-primary" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

<% end %>
